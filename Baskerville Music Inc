<!-- Scripts -->
<script>
  // Scroll-triggered fade-in for legacy image
  const legacyImg = document.querySelector('.legacy-visual img');
  const observer = new IntersectionObserver(entries => {
    entries.forEach(entry => {
      if (entry.isIntersecting) {
        legacyImg.classList.add('visible');
        observer.unobserve(legacyImg);
      }
    });
  }, { threshold: 0.5 });
  observer.observe(legacyImg);

  // Dark mode toggle
  function toggleDarkMode() {
    const body = document.body;
    const isDark = getComputedStyle(body).backgroundColor === 'rgb(10, 10, 10)';
    if (isDark) {
      body.style.backgroundColor = '#ffffff';
      body.style.color = '#111111';
    } else {
      body.style.backgroundColor = '#0a0a0a';
      body.style.color = '#f0f0f0';
    }
  }
</script>

